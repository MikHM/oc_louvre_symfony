<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}title{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.css') }}">
        {#<link rel="stylesheet" href="{{ asset('css/normalize.css') }}">#}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('img/home_crumb.png') }}" />
</head>
<body>

{#// TODO Better way to do this: flashMessage#}
{%  for flashMessage in app.session.flashbag.get("success") %}
    <div>{{ flashMessage }}</div>
{% endfor %}

{%  for flashMessage in app.session.flashbag.get("error") %}
    <div>{{ flashMessage }}</div>
{% endfor %}


<div class="row">
    <header class="row title col-md-4 col-md-offset-4">
        <img src="{{ asset('img/small_logo_Louvre.png') }}" alt="Logo du musée du Louvre - Page d’accueil du site internet du musée du Louvre (Paris, France)">
        <h1>Billetterie officielle</h1>
    </header>
</div>


<div class="main-content">

    <div class="container">
        <div class="row col-md-offset-3 col-md-6">
            {% block body %}

            {% endblock %}
        </div>
    </div>

    <div class="container">
        <div class="footer row col-md-offset-3 col-md-6 text-center">
            <p class="footer-text">© 2016 Musée du Louvre</p>
            <p>Made by <a href="#">Framaru</a></p>
        </div>
    </div>
</div>


{% block javascripts %}

    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>